{
  "tabBar": {
    "list": [
      {
        "pagePath": "pages/main/home/index",
        "text": "首页"
      },
      {
        "pagePath": "pages/main/discover/index",
        "text": "发现"
      },
      {
        "pagePath": "pages/main/me/index",
        "text": "我的"
      }
    ]
  },
  "pages": [
    {
      "path": "pages/main/home/index",
      "style": {
        "navigationBarTitleText": "uni-app"
      },
      "usingComponents": true
    },
    {
      "path": "pages/main/discover/index",
      "style": {
        "navigationBarTitleText": "发现"
      },
      "usingComponents": true
    },
    {
      "path": "pages/main/me/index",
      "style": {
        "navigationBarTitleText": "我的",
        "enablePullDownRefresh": true
      }
    }
  ],
  "subPackages": [
    {
      "root": "pages-blog",
      "pages": [
        {
          "path": "index",
          "style": {
            "navigationBarTitleText": ""
          }
        }
      ]
    },
    {
      "root": "pages-h5",
      "pages": [
        {
          "path": "pages/home/index",
          "style": {
            "navigationBarTitleText": "uni-app(package-a)",
            "navigationStyle": "custom",
            "enablePullDownRefresh": true
          }
        },
        {
          "path": "pages/custom-navigation/index",
          "style": {
            "navigationStyle": "custom"
          }
        }
      ]
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  "easycom": {
    "autoscan": true,
    "custom": {
      "^u--(.*)": "uview-plus/components/u-$1/u-$1.vue",
      "^up-(.*)": "uview-plus/components/u-$1/u-$1.vue",
      "^u-([^-].*)": "uview-plus/components/u-$1/u-$1.vue"
    }
  }
}
